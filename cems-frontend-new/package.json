{
  "name": "ase-cems-monitoring",
  "private": true,
  "version": "1.0.0",

  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "server": "node server.js",
    "start": "npm run build && node server.js",
    "dev-full": "concurrently \"npm run dev\" \"npm run server\"",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run dev\" \"electron .\"",
    "build-standalone": "npm run build && electron-builder",
    "dist": "electron-builder"
  },
  "dependencies": {
    "antd": "^5.26.7",
    "cors": "^2.8.5",
    "dayjs": "^1.11.13",
    "express": "^5.1.0",
    "node-fetch": "^2.7.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.8.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^4.7.0",
    "electron": "^32.0.0",
    "electron-builder": "^25.1.0",
    "eslint": "^9.32.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "vite": "^7.1.0"
  },
  "build": {
    "appId": "com.ase.cems",
    "productName": "ASE CEMS Monitoring",
    "directories": {
      "output": "../build-webportal"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "../cems-backend/dist/backend.exe",
        "to": "backend.exe"
      },
      {
        "from": "../cems-backend/database_sqlite.py",
        "to": "database_sqlite.py"
      },
      {
        "from": "../cems-backend/database_postgres.py",
        "to": "database_postgres.py"
      },
      {
        "from": "../cems-backend/config.json",
        "to": "config.json"
      },
      {
        "from": "../cems-backend/mapping.json",
        "to": "mapping.json"
      },
      {
        "from": "../cems-backend/blowback_settings.json",
        "to": "blowback_settings.json"
      },
      {
        "from": "../cems-backend/cems_data.db",
        "to": "cems_data.db"
      },
      {
        "from": "../cems-backend/CEMS_DataLog.csv",
        "to": "CEMS_DataLog.csv"
      },
      {
        "from": "../cems-backend/CEMS_ErrorLog.csv",
        "to": "CEMS_ErrorLog.csv"
      },
      {
        "from": "dist",
        "to": "dist"
      }
    ],
              "win": {
            "target": [
              {
                "target": "nsis",
                "arch": ["x64"]
              },
              {
                "target": "portable",
                "arch": ["x64"]
              }
            ]
          },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
